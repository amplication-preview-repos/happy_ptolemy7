datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt DateTime @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lastName  String?
  orderType Order[]
  sales     Sale?    @relation(fields: [salesId], references: [id])
  salesId   String?  @db.ObjectId
  updatedAt DateTime @updatedAt
}

model Order {
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?   @db.ObjectId
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  ordertyes  Product[]
  sales      Sale[]    @relation(fields: [salesIds], references: [id])
  salesIds   String[]  @db.ObjectId
  updatedAt  DateTime  @updatedAt
}

model Product {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  order     Order?   @relation(fields: [orderId], references: [id])
  orderId   String?  @db.ObjectId
  updatedAt DateTime @updatedAt
}

model Sale {
  createdAt DateTime   @default(now())
  customer  Customer[]
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  order     Order[]    @relation(fields: [orderIds], references: [id])
  orderIds  String[]   @db.ObjectId
  updatedAt DateTime   @updatedAt
}
